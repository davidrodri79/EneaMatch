<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género"/>
            <!--EditText
                android:id="@+id/genreEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hombre/Mujer/Otro"/-->
            <Spinner
                android:id="@+id/genreSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad mínima"/>
            <EditText
                android:id="@+id/minAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad en años"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad máxima"/>
            <EditText
                android:id="@+id/maxAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad en años"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eneatipos"/>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="3">
            <CheckBox android:id="@+id/checkbox_e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E1"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E2"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E3"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E4"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E5"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E6"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E7"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E8"
                android:checked="true"/>
            <CheckBox android:id="@+id/checkbox_e9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E9"
                android:checked="true"/>
            </GridLayout>
            <Button
                android:id="@+id/saveSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>